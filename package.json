{
  "name": "mcp-jest",
  "version": "1.0.12",
  "description": "Testing framework for Model Context Protocol (MCP) servers - like Jest but for MCP",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "mcp-jest": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs --dts",
    "dev": "tsx src/cli.ts",
    "test": "node tests/test.js",
    "prepublishOnly": "npm run build",
    "lint": "biome check ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "testing",
    "ai",
    "llm",
    "framework",
    "anthropic"
  ],
  "engines": {
    "node": ">=18"
  },
  "author": "Harsh Joshi <harsh.joshi.pth@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josharsh/mcp-jest.git"
  },
  "bugs": {
    "url": "https://github.com/josharsh/mcp-jest/issues"
  },
  "homepage": "https://mcp-jest.ddiy.diy",
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/josharsh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "biome": "^0.3.3",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
